<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    <!-- Any attributes here apply to the actual sql table. If you dont include them, the name will be assumed based on the class/field name -->
    
    	<class name="models.Notify" table= "Notify">
    
   			<!-- Optional metainfo of table -->
    		<meta attribute="class-description">Table of Notifications</meta>
			
			<!-- ID tag is for primary ID -->
    		<id name = "rid" type="double">
    		<!-- IF YOU NEED HIBERNATE GENERATE NEW ID'S FOR YOU USE THE FOLLOWING TAGS 
    		<generator class="native">
    		<param name="sequence">notify_seq</param>
    		</generator> -->
    		</id>
    		<property name="eid" type = "double" column = "E_ID"></property>
    		<property name="typ" type = "string"></property>
    	
    	
    	</class>
    </hibernate-mapping>